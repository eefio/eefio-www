<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body <%= body_id %>>
    <nav>
      <% t('nav').each do |path, name| %>
        <%= link_to name, path, class: path %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
