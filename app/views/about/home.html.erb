<header>
  <h1><%= t :brand %></h1>
  <p><%= t :tagline %></p>
</header>

<nav>
  <% t('home.nav').each do |_, name| %>
    <%= link_to name, anchor: name.downcase %>
  <% end %>
</nav>

<% %w[what why how when who].each do |section| %>
  <div id='<%= section %>'>
    <h2><%= t "home.#{section}.heading" %></h2>

    <%= render_markdown t("home.#{section}.description") %>

    <%# Special case to show a JSON code block for the How section %>
    <% if section == 'how' %>
      <pre class='code'><%= File.read(Rails.root.join 'config', 'locales', 'blocks_0.json').truncate(667) %></pre>
    <% end %>
  </div>
<% end %>
